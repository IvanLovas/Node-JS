{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                    
    "outDir": "dist",                          
    "rootDir": "./api/src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },

  "include": [
    "api/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
